rules_version = '2';

// Firebase Storage Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Posts storage - images, videos, certificates
    match /posts/{type}/{userId}/{fileName} {
      // Allow authenticated users to upload their own files
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow anyone to read (public posts)
      allow read: if true;
      
      // Only owner can delete
      allow delete: if request.auth != null && request.auth.uid == userId;
      
      // Validate file size and types
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 100 * 1024 * 1024 && // Max 100MB
                      (type == 'images' || type == 'videos' || type == 'certificates');
    }
    
    // Resumes storage
    match /resumes/{userId}/{fileName} {
      // Allow authenticated users to upload their own resume
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to read resumes (for job applications)
      allow read: if request.auth != null;
      
      // Only owner can delete
      allow delete: if request.auth != null && request.auth.uid == userId;
      
      // Validate file size (max 5MB for resumes)
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024;
    }
    
    // Profile pictures
    match /profile-pictures/{userId}/{fileName} {
      // Allow users to upload their own profile picture
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow anyone to read profile pictures
      allow read: if true;
      
      // Only owner can delete
      allow delete: if request.auth != null && request.auth.uid == userId;
      
      // Validate file size (max 2MB)
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 2 * 1024 * 1024;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
